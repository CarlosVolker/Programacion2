<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvPastelChoclo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:text="Pastel de Choclo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Cazuela"
        app:layout_constraintEnd_toEndOf="@+id/tvPastelChoclo"
        app:layout_constraintTop_toBottomOf="@+id/tvPastelChoclo" />

    <EditText
        android:id="@+id/etCantidadPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="2"
        android:hint="Cantidad Pastel de Choclo"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvPastelChoclo"
        app:layout_constraintStart_toEndOf="@+id/tvPastelChoclo"
        app:layout_constraintTop_toTopOf="@+id/tvPastelChoclo" />

    <EditText
        android:id="@+id/etCantidadCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:ems="2"
        android:hint="Cantidad Cazuela"
        android:inputType="number"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvCazuela"
        app:layout_constraintStart_toEndOf="@+id/tvCazuela"
        app:layout_constraintTop_toTopOf="@+id/tvCazuela" />

    <TextView
        android:id="@+id/txComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="90dp"
        android:text="Comida"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvValorCazuela" />

    <TextView
        android:id="@+id/tvPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Propina"
        app:layout_constraintEnd_toEndOf="@+id/txComida"
        app:layout_constraintTop_toBottomOf="@+id/txComida" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TOTAL"
        app:layout_constraintEnd_toEndOf="@+id/tvPropina"
        app:layout_constraintTop_toBottomOf="@+id/tvPropina" />

    <TextView
        android:id="@+id/tvValorComida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/txComida"
        app:layout_constraintTop_toTopOf="@+id/txComida"
        android:text="$0" />

    <TextView
        android:id="@+id/tvValorPropina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0"
        app:layout_constraintStart_toStartOf="@+id/tvValorComida"
        app:layout_constraintTop_toBottomOf="@+id/tvValorComida" />

    <TextView
        android:id="@+id/tvValorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="$0"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvValorPropina"
        app:layout_constraintTop_toBottomOf="@+id/tvValorPropina" />

    <TextView
        android:id="@+id/tvValorPastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvPastelChoclo"
        app:layout_constraintTop_toBottomOf="@+id/tvPastelChoclo"
        tools:text="0" />

    <TextView
        android:id="@+id/tvValorCazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvCazuela"
        app:layout_constraintTop_toBottomOf="@+id/tvCazuela"
        tools:text="0" />

    <Switch
        android:id="@+id/swPropina"
        android:layout_width="77dp"
        android:layout_height="59dp"
        android:checked="true"
        android:showText="false"
        app:layout_constraintBottom_toBottomOf="@+id/tvPropina"
        app:layout_constraintEnd_toStartOf="@+id/tvPropina"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPropina"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>